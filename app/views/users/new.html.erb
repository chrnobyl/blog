<h1>Sign up</h1><br/>
<%= form_tag login_path do %>
  <%= label_tag 'Username' %><br/>
  <%= text_field_tag 'user[username]' %><br/>
  <%= label_tag 'Password' %><br/>
  <%= password_field_tag 'user[password]' %><br/>
  <%= label_tag 'Password confirmation' %><br/>
  <%= password_field_tag 'user[password]' %><br/>
  <%= label_tag 'Email' %><br/>
  <%= password_field_tag 'user[email]' %><br/>
  <%= submit_tag "Log In" %>
<% end %>
